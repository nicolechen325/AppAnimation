<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.set.view">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--动画主页-->
        <activity android:name="com.set.view.MainViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--各类动画Activity-->
        <activity android:name=".anim.sample.TweenAnimActivity" />
        <activity android:name=".anim.sample.PropertyAnimActivity" />
        <activity android:name=".anim.sample.ScrollerActivity" />
        <activity android:name=".anim.explosion.ExplosionActivity" />
        <activity android:name=".anim.loading.LoadingActivity" />
        <activity android:name=".anim.sample.FrameAnimActivity" />
        <activity android:name=".anim.sample.FasterImageAnimActivity" />
        <activity android:name=".anim.sample.OpenDoorActivity" />
        <activity android:name=".anim.sample.TweenInterpolatorActivity" />
        <activity android:name=".anim.sample.ViewTranslationActivity" />

        <activity
            android:name=".scroll.RecyclerScrollActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".image.ImageScaleActivity" />
        <activity android:name=".image.ImageViewActivity" />
        <activity
            android:name=".image.NinePngActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

    <!--适配全面屏幕-->
    <meta-data
        android:name="android.max_aspect"
        android:value="2.1" />
</manifest>