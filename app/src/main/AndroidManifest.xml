<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.set.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--动画主页-->
        <activity android:name="com.set.anim.MainAnimActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--各类动画Activity-->
        <activity android:name="com.set.anim.sample.TweenAnimActivity" />
        <activity android:name="com.set.anim.sample.PropertyAnimActivity" />
        <activity android:name="com.set.anim.sample.ScrollerActivity" />
        <activity android:name="com.set.anim.explosion.ExplosionActivity" />
        <activity android:name="com.set.anim.loading.LoadingActivity" />
        <activity android:name="com.set.anim.sample.FrameAnimActivity" />
        <activity android:name="com.set.anim.sample.FasterImageAnimActivity" />
        <activity android:name="com.set.anim.OpenDoorActivity" />


    </application>

    <!--适配全面屏幕-->
    <meta-data
        android:name="android.max_aspect"
        android:value="2.1" />
</manifest>