<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="图片像素宽300px，高200px"
        android:textColor="#ddafff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="显示原图"
        android:textColor="#ddafff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <!--fitxy-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f4f4f4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fitxy"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitXY，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitXY，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitXY，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />

            </LinearLayout>
            <!--fitcenter-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#e4e4e4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fit_center"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitCenter，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitCenter，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitCenter，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />

            </LinearLayout>
            <!--fitstart-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#f4e4f4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fit_start"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#dddfff"
                    android:scaleType="fitStart"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitStart，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="#dddfff"
                    android:scaleType="fitStart"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitStart，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/fit_end"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#dddfff"
                    android:scaleType="fitEnd"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitEnd，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />


                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:background="#dddfff"
                    android:scaleType="fitEnd"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="fitEnd，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

            </LinearLayout>
            <!--center-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#f4e4e4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/center"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="center"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="center，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="center"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="center，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="#dddfff"
                    android:scaleType="center"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="center，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />
            </LinearLayout>
            <!--centercrop-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#e4f4f4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/center_crop"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerCrop，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_scale" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerCrop，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerCrop，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />

            </LinearLayout>
            <!--centerinside-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#e4f4e4"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/center_inside"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_scale" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerInside，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerInside，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="centerInside，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />


            </LinearLayout>
            <!--matrix-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#e4f4f4"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/matrix"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="matrix"
                    android:src="@drawable/image_scale" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="matrix，图片大小宽60dp，高30dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="matrix"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="matrix，图片大小宽200dp，高150dp"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="#dddfff"
                    android:scaleType="matrix"
                    android:src="@drawable/image_scale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="matrix，图片大小宽200dp，高30dp"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/image_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_scale"
        android:visibility="gone" />
</FrameLayout>